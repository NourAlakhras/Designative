<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <title>Designative - Signup</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/css/sign_up_style.css" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Audiowide|Sofia|Trirong" />
  <link href="https://fonts.googleapis.com/css?family=Ysabeau" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    /*Background color*/
    body {
      background: linear-gradient(45deg, #345d7d, #695b7b, #c26a86, #f7d6e1);
      background-size: 400% 400%;
      animation: gradient 10s ease infinite;
      height: 100vh;
      width: 100vw;
    }

    @keyframes gradient {
      0% {
        background-position: 0% 50%;
      }

      50% {
        background-position: 100% 50%;
      }

      100% {
        background-position: 0% 50%;
      }
    }

    /*welcome back color*/
    .gradient-text {
      /* Fallback: Set a background color. */
      background-color: red;
      font-family: "Roboto", sans-serif;
      font-weight: bold;

      /* Create the gradient. */
      background-image: linear-gradient(45deg, #345d7d, #f7d6e1, #695b7b, #c26a86);

      /* Set the background size and repeat properties. */

      background-repeat: repeat;

      /* Use the text as a mask for the background. */
      /* This will show the gradient as a text color rather than element bg. */
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      -moz-background-clip: text;
      -moz-text-fill-color: transparent;
      font-size: 50px;
    }

    /*login button*/
    .buttons {
      margin: 0;
      text-align: center;
    }

    .btn-hover {
      width: 200px;
      font-size: 18px;
      font-weight: 600;
      color: #fff;
      cursor: pointer;
      margin: 2px;
      margin-bottom: 30px;
      height: 40px;
      text-align: center;
      border: none;
      background-size: 300% 100%;

      border-radius: 20px;
      moz-transition: all 0.4s ease-in-out;
      -o-transition: all 0.4s ease-in-out;
      -webkit-transition: all 0.4s ease-in-out;
      transition: all 0.4s ease-in-out;
    }

    .btn-hover:hover {
      background-position: 100% 0;
      moz-transition: all 0.4s ease-in-out;
      -o-transition: all 0.4s ease-in-out;
      -webkit-transition: all 0.4s ease-in-out;
      transition: all 0.4s ease-in-out;
    }

    .btn-hover:focus {
      outline: none;
    }

    .btn-hover.color-1 {
      background-image: linear-gradient(to right, #345d7d, #f7d6e1, #695b7b, #c26a86);
    }

    /*input fields*/
    .form {
      background-color: white;
      border-radius: 20px;
      box-sizing: border-box;
      height: 500px;
      padding: 20px;
      width: 320px;
    }

    .input-container {
      height: 50px;
      position: relative;
      width: 100%;
    }

    .ic1 {
      margin-top: 20px;
    }

    .ic2 {
      margin-top: 20px;
      margin-bottom: 20px;
    }

    .input {
      background-color: #ffffff;
      border-radius: 12px;
      border: 1px solid lightgray;
      box-sizing: border-box;
      color: #345d7d;
      font-size: 18px;
      height: 100%;
      outline: 0;
      padding: 4px 20px 0;
      width: 100%;
    }

    .cut {
      background-color: white;
      border-radius: 10px;
      height: 20px;
      left: 20px;
      position: absolute;
      top: -20px;
      transform: translateY(0);
      transition: transform 200ms;
      width: 76px;
    }

    .cut-short {
      width: 50px;
    }

    .input:focus~.cut,
    .input:not(:placeholder-shown)~.cut {
      transform: translateY(8px);
    }

    .placeholders {
      color: gray;
      font-family: sans-serif;
      left: 20px;
      line-height: 14px;
      pointer-events: none;
      position: absolute;
      transform-origin: 0 50%;
      transition: transform 200ms, color 200ms;
      top: 20px;
    }

    .input:focus~.placeholders,
    .input:not(:placeholder-shown)~.placeholders {
      transform: translateY(-30px) translateX(10px) scale(0.75);
    }

    .input:not(:placeholder-shown)~.placeholders {
      color: #c56b85;
    }

    .input:focus~.placeholders {
      color: #c56b85;
    }

    /*checkbox*/
    /* The container */
    .containercb {
      display: block;
      position: relative;
      padding-left: 35px;
      margin-bottom: 12px;
      cursor: pointer;
      font-size: 15px;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
      color: #725a7a;
    }

    /* Hide the browser's default checkbox */
    .containercb input {
      position: absolute;
      opacity: 0;
      cursor: pointer;
      height: 0;
      width: 0;
    }

    /* Create a custom checkbox */
    .checkmark {
      position: absolute;
      top: 0;
      left: 0;
      height: 17px;
      width: 17px;
      border-radius: 3px;
      background-color: #eee;
      margin-left: 9px;
      margin-top: 3px;
    }

    /* On mouse-over, add a grey background color */
    .containercb:hover input~.checkmark {
      background-color: #ccc;
    }

    /* When the checkbox is checked, add a blue background */
    .containercb input:checked~.checkmark {
      background-color: #345d7d;
    }

    /* Create the checkmark/indicator (hidden when not checked) */
    .checkmark:after {
      content: "";
      position: absolute;
      display: none;
    }

    /* Show the checkmark when checked */
    .containercb input:checked~.checkmark:after {
      display: block;
    }

    /* Style the checkmark/indicator */
    .containercb .checkmark:after {
      left: 7px;
      top: 3px;
      width: 5px;
      height: 10px;
      border: solid white;
      border-width: 0 3px 3px 0;
      -webkit-transform: rotate(45deg);
      -ms-transform: rotate(45deg);
      transform: rotate(45deg);
    }

    .return-login {
      text-align: center;
    }

    .modal {

      align-items: center;
      display: flex;
      justify-content: center;
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;

      transition: all 0.4s;
      visibility: hidden;
      opacity: 0;
    }

    .content {

      position: absolute;
      background: #F6F0F4;
      width: 70%;
      padding: 1em 2em;
      border-radius: 4px;
    }

    .modal:target {
      visibility: visible;
      opacity: 1;
    }

    .box-close {
      position: absolute;
      top: 0;
      right: 15px;
      color: #345D7D;
      text-decoration: none;
      font-size: 30px;
    }

    /* Set styles for header */
    .header {
      z-index: 1;
      height: 100%;
      min-height: 100px;

    }

    nav {
      padding: 0 2% !important;
    }

    /* Set styles for header logo */
    .header .navbar-brand {
      font-size: 2.2rem !important;
      font-weight: 700;
    }

    /* Set styles for first part of logo */
    .navbar-brand span:first-child {
      color: #914f62;
    }

    /* Set styles for second part of logo */
    .navbar-brand span:last-child {
      color: #244157;
    }

    /*set styles for nav bar*/
    .navbar-collapse a {
      font-size: 1.1rem !important;
      font-weight: 500 !important;
      color: #244157 !important;
      transition: color 0.2s ease-in-out;
      /* add a transition effect */
    }

    .navbar-collapse a:hover,
    .login:hover,
    .signup:hover,
    .navbar a.active:hover {
      color: #5e3441 !important;
    }

    .navbar a.active {
      background-color: #c26a86 !important;
      border-radius: 20px !important;
      border: none !important;
      color: white !important;
      padding: 2%;
      margin-top: 10%;
    }

    /* Set styles for signup and login */
    .login,
    .signup {
      font-size: 1.1rem !important;
      font-weight: 450 !important;
      border-radius: 20px;
      width: 90px;
      text-align: center;
      padding: 1%;
    }

    .signup-login {
      margin-right: 0 3%;
    }

    .login {
      color: #244157;
    }

    .signup {
      background-color: #c26a86;
      color: #244157;
    }

    .navbar-toggler {
      font-size: 0.8rem;
      font-weight: 500;
      border: solid 2px #233f55;

    }

    @media (max-width: 992px) {
      .header {
        flex-wrap: nowrap;
        justify-content: center;
      }

      .navbar-brand {
        margin-right: 0;
        margin-bottom: 10px;
      }

      .navbar-toggler {
        margin-left: 20px;
      }

      .navbar-nav.ms-auto.align-items-center {
        justify-content: center;
      }

      .signup-login {
        margin-top: 10px;
      }

      .navbar-collapse:not(:empty) .signup-login {
        margin: 10 auto !important;
      }

      .navbar-collapse a {
        width: 100%;
        text-align: center;
      }

      .navbar-collapse {
        border-radius: 20px;
        width: auto;
      }

    }

    /* ___________________________________________ */

    .footer {
      padding: 15px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .footer .navbar-brand {
      margin-right: 50px;
      font-size: 2.2rem;
      font-weight: bold;
    }

    .footer .copyright {
      color: #514056;
      font-weight: 400;
    }
  </style>
</head>

<body>

  <div class="container">
    <%- include('partials/nav-bar') %>
    <div class="row d-flex justify-content-center align-items-center h-80">
      <div class="col col-xl-10">
        <div class="card m-5" style="border-radius: 1rem">
          <div class="row g-0">
            <div class="col-md-3 col-lg-1 d-none d-md-block">
              <!---<img src="returnback.jpg" alt="2col" class="d-block w-25 rounded-3 image-fluid ms-3 mt-3" >--->
            </div>
            <div class="col-md-6 col-lg-10 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
                <form method="post" action="/signup" onsubmit="return validateForm(this) ">
                  <div class="d-flex align-items-center mb-2">
                    <span class="h1 fw-bold mb-0">
                      <h1 class="gradient-text">Hello, register now !</h1>
                    </span>
                  </div>
                  <% if (error) { %>
                  <h5 style="color: red"><%= error %></h5>
                  <% } %>

                  <table>
                    <tr>
                      <td>
                        <div class="input-container ic1">
                          <input name="firstname" id="firstName" class="input" type="text" placeholder=" " />
                          <span id="fnameError" class="text-danger"></span><br />
                          <div class="cut"></div>
                          <label for="firstName" class="placeholders">First Name</label>
                        </div>
                      </td>
                      <td>
                        <div class="input-container ic1">
                          <input name="lastname" id="lastName" class="input" type="text" placeholder=" " />

                          <span id="lnameError" class="text-danger"></span><br />

                          <div class="cut"></div>
                          <label for="lastName" class="placeholders">Last Name</label>
                        </div>
                      </td>
                    </tr>
                  </table>
                  <div class="input-container ic1">
                    <input name="email" id="email" class="input" type="email" placeholder=" " />
                    <span id="emailError" class="text-danger" style="margin-left: 135px"></span><br />
                    <div class="cut"></div>
                    <label for="email" class="placeholders">Email</label>
                  </div>
                  <div class="input-container ic2">
                    <input name="password" id="Password" class="input" type="password" placeholder=" " />
                    <span id="passError" class="text-danger" style="margin-left: 135px"></span><br />
                    <div class="cut"></div>
                    <label for="Password" class="placeholders">Password</label>
                  </div>
                  <div class="input-container ic2">
                    <input id="conPassword" class="input" type="password" placeholder=" " />
                    <span id="conpassError" class="text-danger" style="margin-left: 135px"></span><br />
                    <div class="cut"></div>
                    <label for="conPassword" class="placeholders">Confirm Password</label>
                  </div>
                  <label class="containercb">I accept the
                    <a href="#popup-box" class="small text-muted">Privacy policy</a>
                    <input type="checkbox" required />
                    <span class="checkmark"></span>
                  </label>

                  <div class="buttons">
                    <input class="btn-hover color-1" type="submit" value="Register" />
                  </div>

                  <p class="return-login" style="color: #393f81">
                    Already have an account?
                    <a href="/login" style="color: #393f81">Login here</a>
                  </p>
                </form>
              </div>
            </div>
            <div class="col-md-3 col-lg-1 d-none d-md-block"></div>
          </div>
          <div id="popup-box" class="modal ">
            <div class="content">
              <h1 class="gradient-text" style="font-size: 1rem">
                Designative Privacy policy:
              </h1>
              <b>
                <p>At Designative, we take your privacy seriously and we are committed to protecting your
                  personal information(email address). This privacy policy explains what information we collect when you
                  sign up to use our platform, how we use it, and how we keep it secure.</p>
                <p>We take reasonable steps to ensure that your personal information is secure, including using
                  encryption and other security measures to protect your data. However, no system can guarantee
                  100% security, so we cannot guarantee the absolute security of your data.</p>
                <p>We will retain your personal information for as long as necessary to provide you with our services,
                  or as required by law. You can request that we delete your account and personal information at any
                  time.</p>
                <p>By signing up for Designative, you agree to the terms of this privacy policy and consent to the
                  collection and use of your personal information as described herein. If you have any questions
                  or concerns about our privacy policy, please contact us at <a
                    href="mailto:designative.team@gmail.com">designative.team@gmail.com</a></p>
                <p>Designative is allowed to change the Login policy without prior notice.</p>
              </b>
              <a href=" #" class="box-close">
                Ã—
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
  <%- include('partials/footer') %>
  <script>
    function validateForm(form) {
      var fname = document.getElementById("firstName").value;
      var lname = document.getElementById("lastName").value;
      var at = document.getElementById("email").value;
      var pass = document.getElementById("Password").value;
      var conpass = document.getElementById("conPassword").value;
      submitOK = "true";
      // fname Error
      if (fname == "") {
        document.getElementById("fnameError").textContent = "first name required";
        //alert("The name may have no more than 10 characters");
        submitOK = "false";
      } else {
        document.getElementById("fnameError").textContent = "";
        //alert("The name may have no more than 10 characters");
        submitOK = "true";
      }
      // fname Error
      if (lname == "") {
        document.getElementById("fnameError").textContent = "last name required";
        //alert("The name may have no more than 10 characters");
        submitOK = "false";
      } else {
        document.getElementById("fnameError").textContent = "";
        //alert("The name may have no more than 10 characters");
        submitOK = "true";
      }
      // Email error

      if (at == "") {
        document.getElementById("emailError").textContent = "Not e-mail entered!";
        //alert("Not a valid e-mail!");
        submitOK = "false";
      } else if (at.indexOf(".") == -1) {
        document.getElementById("emailError").textContent =
          "The Email address is invalid!";
        //alert("Not a valid e-mail!");
        submitOK = "false";
      } else if (at.indexOf("@") == -1) {
        document.getElementById("emailError").textContent =
          "The Email address is invalid!";
        //alert("Not a valid e-mail!");
        submitOK = "false";
      } else if (/[^a-zA-Z0-9.@_-]/.test(at)) {
        document.getElementById("emailError").textContent =
          "The Email address is invalid!";
        //alert("Not a valid e-mail!");
        submitOK = "false";
      } else {
        document.getElementById("emailError").textContent = "";
        //alert("The name may have no more than 10 characters");
        submitOK = "true";
      }
      //password error
      if (pass == "") {
        document.getElementById("passError").textContent = "No password entered!";
        //alert("Not a valid e-mail!");
        submitOK = "false";
      } else if (pass.length < 6) {
        document.getElementById("passError").textContent =
          "Passwords must be at least 6 characters.";
        //alert("Not a valid e-mail!");
        submitOK = "false";
      } else if (!/[a-z]/.test(pass) || !/[A-Z]/.test(pass) || !/[0-9]/.test(pass)) {
        document.getElementById("passError").textContent =
          "Passwords require one each of a-z, A-Z and 0-9.";
        //alert("Not a valid e-mail!");
        submitOK = "false";
      } else {
        document.getElementById("passError").textContent = "";
        //alert("The name may have no more than 10 characters");
        submitOK = "true";
      }

      //conpass
      if (conpass != pass) {
        document.getElementById("conpassError").textContent = "Password not the same.";
        //alert("Not a valid e-mail!");
        submitOK = "false";
      } else {
        document.getElementById("conpassError").textContent = "";
        //alert("The name may have no more than 10 characters");
        submitOK = "true";
      }

      if (submitOK == "false") {
        return false;
      }
    }
  </script>
</body>

</html>