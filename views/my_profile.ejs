                <script>
                  //add more fields in the form using plus sign
                  // Select the "add sauce" button and initialize a variable to keep track of whether an additional input field has been added
                  const addSauceButton = document.querySelector(".js-add-sauce > a");
                  let hasAdditionalInput = false;

                  // Add an event listener to the "add sauce" button that adds a new input field to the form when clicked
                  addSauceButton.onclick = (event) => {
                    // Prevent the default behavior of the button
                    event.preventDefault();

                    // Check if an additional input field has already been added
                    if (!hasAdditionalInput) {
                      // Create a new input field and append it to the form
                      let listNode = document.createElement("span");
                      let inputNode = document.createElement("input");
                      inputNode.classList.add("js-sauce-name");
                      inputNode.placeholder = "Additional information:";
                      inputNode.name = "additionalInfo"
                      listNode.style.display = "none";
                      listNode.classList.add("awaiting-init");
                      listNode.appendChild(inputNode);

                      let lastInput = document.querySelectorAll(".js-sauce-name")[document.querySelectorAll(
                        ".js-sauce-name").length - 1];
                      lastInput.parentNode.after(listNode);

                      // Animate the appearance of the new input field
                      setTimeout(() => {
                        let awaitInit = document.querySelector(".awaiting-init");
                        slideDown(awaitInit);
                        awaitInit.classList.remove("awaiting-init");
                      }, 100);

                      // Set the variable to true to indicate that an additional input field has been added
                      hasAdditionalInput = true;
                    } else {
                      // Log an error message to the console if an additional input field has already been added
                      console.log("Unable to add field. One additional field has already been added.");
                    }
                  };

                  // Animate an empty input field by adding a bouncing animation
                  const bounceEmptyInput = (childEl) => {
                    childEl.parentNode.style.animation = "bounceError .8s ease";
                    childEl.style.animation = "editInput 1s";
                    setTimeout(() => {
                      childEl.parentNode.style.animation = "none";
                    }, 850);
                  };

                  // Animate an element by sliding it up and hiding it
                  let slideUp = (target, duration = 500) => {
                    target.style.transitionProperty = "height, margin, padding";
                    target.style.transitionDuration = duration + "ms";
                    target.style.boxSizing = "border-box";
                    target.style.height = target.offsetHeight + "px";
                    target.offsetHeight;
                    target.style.overflow = "hidden";
                    target.style.height = 0;
                    target.style.paddingTop = 0;
                    target.style.paddingBottom = 0;
                    target.style.marginTop = 0;
                    target.style.marginBottom = 0;
                    window.setTimeout(() => {
                      target.style.display = "none";
                      target.style.removeProperty("height");
                      target.style.removeProperty("padding-top");
                      target.style.removeProperty("padding-bottom");
                      target.style.removeProperty("margin-top");
                      target.style.removeProperty("margin-bottom");
                      target.style.removeProperty("overflow");
                      target.style.removeProperty("transition-duration");
                      target.style.removeProperty("transition-property");
                    }, duration);
                  };

                  // Animate an element by sliding it down and showing it
                  let slideDown = (target, duration = 1000) => {
                    target.style.removeProperty("display");
                    let display = window.getComputedStyle(target).display;

                    if (display === "none") display = "flex";

                    target.style.display = display;
                    let height = target.offsetHeight;
                    target.style.overflow = "hidden";
                    target.style.height = 0;
                    target.style.paddingTop = 0;
                    target.style.paddingBottom = 0;
                    target.style.marginTop = 0;
