<!DOCTYPE html>
<html lang="en">

<head>
  <title>Designative Contact Us</title>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Contact Us</title>
  <script src="validation.js"></script>
  <link href="https://fonts.googleapis.com/css?family=Ysabeau" rel="stylesheet" />
  <script src="https://kit.fontawesome.com/a33530bb41.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/css/contact_us_style.css" />
  <!-- Bootstrap CSS -->
  <!-- Latest compiled and minified CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Latest compiled JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Verdana" />
</head>

<body style="background-color: #f6f0f4">
  <%- include('partials/nav-bar') %>

  <main>
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h2 id="formHeading">Contact Us</h2>
          <form method="post" action="/contact" id="form">
            <div class="mb-3">
              <label for="name" class="form-label">Your Name</label>
              <input type="text" class="form-control" id="name" name="name" required />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" required />
            </div>
            <div class="mb-3">
              <label for="subject" class="form-label">Subject</label>
              <input type="text" class="form-control" id="subject" name="subject" required />
            </div>
            <div class="mb-3">
              <label for="message" class="form-label">Message</label>
              <textarea class="form-control" id="message" rows="5" name="message" required></textarea>
            </div>
            <button type="submit" id="submit_btn" class="btn" onclick="validateEmail()">
              Submit
            </button>
          </form>
        </div>
        <div class="col-md-6 d-flex justify-content-center align-items-center">
          <img id="#contactusimg" src="/images/circleimg.png" class="rounded-circle img-fluid" alt="ContactUs-img" />
        </div>
      </div>
    </div>
    <center>
      <hr style="
            width: 80%;
            border: 2px solid #c56b85;
            border-radius: 5px;
            margin-top: 2%;
          " />
    </center>

    <section id="findus">
      <h1 id="findHeading">Find Us Here</h1>
      <div class="container-fluid cards-container">
        <div class="row cards-row card__collection clear-fix">
          <div class="col-auto">
            <div class="cards cards--two">
              <img src="/images/pic1.jpeg" class="img-responsive" alt="joody" />
              <span class="cards--two__rect"></span>

              <p id="n">Joody Koujan</p>
              <br /><br />
              <ul class="cards__list">
                <li id="e"><i class="fa fa-envelope"></i> joodykoujan@gmail.com</li>
              </ul>
            </div>
          </div>
          <div class="col-auto">
            <div class="cards cards--two">
              <img src="/images/pic2.jpeg" class="img-responsive" />

              <span class="cards--two__rect"></span>

              <p id="n">Maya Emar</p>
              <ul class="cards__list">
                <li id="e"><i class="fa fa-envelope"></i> mayakhalid1@hotmail.com</li>
              </ul>
            </div>
          </div>
          <div class="col-auto">
            <div class="cards cards--two">
              <img class="img-responsive" src="/images/pic3.jpeg" />

              <span class="cards--two__rect"></span>

              <p id="n">Noor Alakhras</p>
              <ul class="cards__list">
                <li id="e"><i class="fa fa-envelope"></i> nourak@gmail.com</li>
              </ul>
            </div>
          </div>
          <div class="col-auto">
            <div class="cards cards--two">
              <img class="img-responsive" src="/images/pic4.jpeg" />

              <span class="cards--two__rect"></span>

              <p id="n">Raneem Balharith</p>
              <ul class="cards__list">
                <li id="e">
                  <i class="fa fa-envelope"></i> raneem.balharith@gmail.com
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <%- include('partials/footer') %>

  <script src="validation.js"></script>
</body>

</html>